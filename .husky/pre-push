#!/bin/sh

echo "🔍 Running pre-push checks..."

# 1. Lint
echo "✅ Running ESLint..."
npm run lint || {
  echo "❌ Linting failed."
  exit 1
}

# 2. Build
echo "🔧 Running build..."
npm run build || {
  echo "❌ Build failed."
  exit 1
}

# 3. Check for console.log
echo "🚫 Checking for console.log..."
if grep -r "console\\.log" ./src; then
  echo "❌ console.log found! Please remove before pushing."
  exit 1
fi

echo "✅ All checks passed. Push allowed."
